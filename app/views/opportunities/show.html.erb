<div class="tile">
  <div class="tile__media">
    <%= image_tag('emerging-leaders.jpg', class:"tile__img") %>
  </div>
  <div class="tile__details">
    <h3 class="tile-header" style="padding-left: 15%;"><%= @opportunity.name %></h3>
    <div class="tile__title" style="padding-left: 20%;">
      <%= form_for([@opportunity, @badge]) do |f| %>
        <%= f.hidden_field :name, value: @opportunity.name %>
        <%= f.hidden_field :description, value: @opportunity.description %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.hidden_field :opportunity_id, value: @opportunity.id %>
        <%= f.hidden_field :green, value: true %>
        <%= f.submit "SIGN UP", class:"submit-green", style:"margin: 20px auto;" %>
      <% end %>
    </div>
  </div>
</div>
