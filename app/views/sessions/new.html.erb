<div class="background">

  <h1 class="form-title">Welcome!</h1>

  <div class="container">
    <h3 class="form-title">Login</h3>

    <%= form_tag login_path do %>
      <div class="field">
        <div class="field-label"><%= label_tag :email %></div>
        <%= text_field_tag :email, params[:email], class:"field-input" %>
      </div>

      <div class="field">
        <div class="field-label"><%= label_tag :password %></div>
        <%= password_field_tag :password, nil, class:"field-input", placeholder:"At least 6 characters" %>
      </div>

      <div class="field">
        <div class="field-label"><%= label_tag :password %></div>
        <%= password_field_tag :password, nil, class:"field-input", placeholder:"At least 6 characters", class:"field-input" %>
      </div>

      <div class="actions"><%= submit_tag "LOGIN", class:"submit" %></div>
    <% end %>
  </div>

</div>
