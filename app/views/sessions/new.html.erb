<div class="container">
  <h3>Login</h3>

  <%= form_tag login_path do %>
    <div class="field">
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email] %>
    </div>

    <div class="field">
      <%= label_tag :password %>
      <%= password_field :password %>
    </div>

    <div class="actions"><%= submit_tag "Login", class:"submit" %></div>
  <% end %>
</div>
