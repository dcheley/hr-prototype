<div class="container" style="margin-top: 15px; margin-bottom: 0; text-align: center;">
<% if current_user %>
  <h1 class="form-title" style="padding-top: 3%; margin-bottom: 0;">Give a recognition badge:</h1>
    <%= render 'recognitions_form' %>

      <div class="float">
        <%= link_to "BACK TO #{@user.name.upcase}'S PROFILE", "/users/#{@user.id}",
            class:"submit-blue", style:"margin-left: 15px;" %>
      </div>
    </div>
<% else %>
  <h1 class="login-message"><%= link_to "LOGIN", :login %> to give a recognition badge</h1>
<% end %>
</div>
