<div class="background">
  <% if current_user.id == @recognition.receiver_id || current_user.id == @recognition.recognizer_id %>
    <h1 class="form-title" style="padding-top: 3%; margin-bottom: 3%;">Edit Badge</h1>

    <div class="container" style="margin-top: 15px; text-align: center;">
      <%= render 'recognitions_form' %>

        <div class="float">
          <%= link_to "/users/#{@user.id}/recognitions/#{@recognition.id}", class:"cancel-link" do %>
            <div class="delete">CANCEL</div>
          <% end %>
        </div>

        <div class="float" style="clear: both;">
          <%= link_to "/users/#{@user.id}", class:"cancel-center-link" do %>
            <div class="submit-blue">BACK TO <%= "#{@user.name}".upcase %>'s PROFILE</div>
          <% end %>
        </div>
      </div>
    </div>

  <% else %>
    <h1 class="login-message"><%= link_to "LOGIN", :login %> to edit <%= User.find(@recognition.receiver_id).name %>'s badge</h1>
  <% end %>
</div>
