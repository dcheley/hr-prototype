<% if current_user %>
  <div style="text-align: center;">
    <%= link_to "/users/org_charts", class:"cancel-center-link" do %>
      <div class="submit-blue">BACK TO CSD ORG CHART</div>
    <% end %>
  </div>

  <h1 class="org-title">Service Management & Facilities</h1>

  <p class="legend-title">Unit by colour</p>

  <ul class="legend">
    <li class="legend-item"><span class="team-five"></span>Beatriz V</li>
    <li class="legend-item"><span class="team-four"></span>Alma B</li>
    <li class="legend-item"><span class="team-three"></span>Christine P</li>
    <li class="legend-item"><span class="team-two"></span>Peter R</li>
    <li class="legend-item"><span class="team-one"></span>Nelson J</li>
  </ul>

  <section class="org-container">
    <% @users.where(service_management_and_facilities: true, director: true).each do |a| %>
      <div id="level-0" class="level expanded">
        <div class="level-wrap">
          <div id="level-0-active" class="col-1-3 active">

            <%= link_to "/users/#{a.id}" do %>
              <div class="element">
                <div class="org-box">
                  <div class="org-header">
                    <h4 class="branch"><%= a.title %><span class=""></span></h4>
                  </div>
                  <% if a.avatar.file? != true %>
                    <div class="org-details">
                      <p class="boss-name"><%= a.name %></p>
                    </div>
                    <div class="info-btn"><span class="glyphicon glyphicon-user"></span></div>
                  <% else %>
                    <div class="org-details">
                      <p class="boss-name"><%= a.name %></p>
                    </div>
                    <%= image_tag a.avatar.url(:medium), class:"org-profile-pic" %>
                  <% end %>
                </div>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    <% end %>

    <div id="level-1" class="level">
      <div class="level-wrap">

        <!-- <div id="level-1-active" class="col-1-3 active"> -->
          <!-- <div class="element"></div> -->
        <!-- </div> -->

        <div id="level-1-list" class="col-1-3 list">

          <!-- <h3 style="text-align: center;">Managers</h3> -->

          <ul>
            <% @users.where(service_management_and_facilities: true, manager: true).each do |b| %>
              <%= link_to "/users/#{b.id}" do %>
                <li class="element">
                  <div class="org-box">
                    <% if b.team == 1 %>
                      <div class="org-header">
                    <% elsif b.team == 2 %>
                      <div class="org-header" id="team-2">
                    <% elsif b.team == 3 %>
                      <div class="org-header" id="team-3">
                    <% elsif b.team == 4 %>
                      <div class="org-header" id="team-4">
                    <% elsif b.team == 5 %>
                      <div class="org-header" id="team-5">
                    <% end %>
                        <h4 class="branch"><%= b.title %><span class=""></span></i></h4>
                      </div>
                    <% if b.avatar.file? != true %>
                      <div class="org-details">
                        <p class="boss-name"><%= b.name %></p>
                      </div>
                      <div class="info-btn"><span class="glyphicon glyphicon-user"></span></div>
                    <% else %>
                      <div class="org-details">
                        <p class="boss-name"><%= b.name %></p>
                      </div>
                      <%= image_tag b.avatar.url(:medium), class:"org-profile-pic" %>
                    <% end %>
                </li>
              <% end %>
            <% end %>
          </ul>
        </div>

      </div>
    </div>
    <!--  "level hidden" to hide -->
    <div id="level-2" class="level">
      <div class="level-wrap">

        <!-- <div id="level-2-active" class="col-1-3 active">
          <div class="element"></div>
        </div> -->

        <div id="level-2-list" class="col-1-3 list">

          <!-- <h3 style="text-align: center;">Staff</h3> -->

          <ul>
            <% @users.where(service_management_and_facilities: true, staff: true).each do |c| %>
              <%= link_to "/users/#{c.id}" do %>
                <li class="element">
                  <div class="org-box">
                    <% if c.team == 1 %>
                      <div class="org-header">
                    <% elsif c.team == 2 %>
                      <div class="org-header" id="team-2">
                    <% elsif c.team == 3 %>
                      <div class="org-header" id="team-3">
                    <% elsif c.team == 4 %>
                      <div class="org-header" id="team-4">
                    <% elsif c.team == 5 %>
                      <div class="org-header" id="team-5">
                    <% end %>
                        <h4 class="branch"><%= c.title %><span class=""></span></h4>
                      </div>
                    <% if c.avatar.file? != true %>
                      <div class="org-details">
                        <p class="boss-name"><%= c.name %></p>
                      </div>
                      <div class="info-btn"><span class="glyphicon glyphicon-user"></span></div>
                    <% else %>
                      <div class="org-details">
                        <p class="boss-name"><%= c.name %></p>
                      </div>
                      <%= image_tag c.avatar.url(:medium), class:"org-profile-pic" %>
                    <% end %>
                  </div>
                </li>
              <% end %>
            <% end %>
          </ul>
        </div>

      </div>
    </div>
  </section>
<% else %>
  <h1 class="login-message"><%= link_to "LOGIN", :login %> to view Interactive Org Chart</h1>
<% end %>
