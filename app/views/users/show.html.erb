<div class="background">
  <% if current_user && current_user == @user %>
    <div class="left-side">
      <!-- <h1 class="profile-title"><%= link_to "Edit Settings", "/users/#{@user.id}/edit" %></h1> -->
      </br><h1 class="profile-title">Your Profile</h1>

      <%= render 'profile-info' %>
    </div>

    <div class="right-side">
      <h1 class="badge-title">Your badges</h1>

      <p class="profile-link"><%= link_to 'ADD Badge', "/users/#{@user.id}/badges/new", style:"color: #0000CD;" %></p>

      <h3 class="badge-title"><b>*Click</b> a <b>badge</b> to <b>add</b> a <b>description</b> of your experience</h3>

      <ul class="badge-list">
        <!-- Display Red Badges -->
        <% @user.badges.where(red: true).each do |b| %>
          <%= link_to "/users/#{@user.id}/badges/#{b.id}/edit" do %>
            <div class="badge-red">
              <li class="profile-badges">
                <%= "#{b.name}" %>
              </li></br>
            </div>
          <% end %>
        <% end %>
        <!-- Display Blue Badges -->
        <% @user.badges.where(blue: true).each do |b| %>
          <%= link_to "/users/#{@user.id}/badges/#{b.id}/edit" do %>
            <div class="badge-blue">
              <li class="profile-badges">
                <%= "#{b.name}" %>
              </li></br>
            </div>
          <% end %>
        <% end %>
        <!-- Display Yellow Badges -->
        <% @user.badges.where(yellow: true).each do |b| %>
          <%= link_to "/users/#{@user.id}/badges/#{b.id}/edit" do %>
            <div class="badge-yellow">
              <li class="profile-badges">
                <%= "#{b.name}" %>
              </li></br>
            </div>
          <% end %>
        <% end %>
        <!-- Display Green Badges -->
        <% @user.badges.where(green: true).each do |b| %>
          <%= link_to "/users/#{@user.id}/badges/#{b.id}/edit" do %>
          <div class="badge-green">
            <li class="profile-badges">
              <%= "#{b.name}" %>
            </li></br>
          </div>
          <% end %>
        <% end %>
        <!-- Display Purple Badges -->
        <% @user.badges.where(purple: true).each do |b| %>
          <%= link_to "/users/#{@user.id}/badges/#{b.id}/edit" do %>
            <div class="badge-purple">
              <li class="profile-badges">
                <%=  "#{b.name}" %>
              </li></br>
            </div>
          <% end %>
        <% end %>
        <!-- Display Pink Badges -->
        <% @user.badges.where(pink: true).each do |b| %>
          <%= link_to "/users/#{@user.id}/badges/#{b.id}/edit" do %>
            <div class="badge-pink">
              <li class="profile-badges">
                <%= "#{b.name}" %>
              </li></br>
            </div>
          <% end %>
        <% end %>
        <!-- Display Grey Badges -->
        <% @user.badges.where(grey: true).each do |b| %>
          <%= link_to "/users/#{@user.id}/badges/#{b.id}/edit" do %>
            <div class="badge-grey">
              <li class="profile-badges", style="color: black;">
                <%= "#{b.name}" %>
              </li></br>
            </div>
          <% end %>
        <% end %>
      </ul>
    </div>

  <% elsif current_user && current_user != @user %>
    <div class="left-side">
      </br><h1 class="profile-title"><%= @user.name %>'s Profile</h1>

      <%= render 'profile-info' %>
    </div>

    <div class="right-side">
      <h1 class="badge-title"><%= "#{@user.name}" %>'s badges</h1>

      <p class="profile-link"><%= link_to 'GIVE Badge', "/users/#{@user.id}/badges/new", style:"color: #0000CD;" %></p>

      <h3 class="badge-title"><b>*Click</b> a <b>badge</b> to learn more about their skills and experience.</h3>

      <ul class="badge-list">
        <!-- Display Red Badges -->
        <% @user.badges.where(red: true).each do |b| %>
          <%= link_to "/users/#{@user.id}/badges/#{b.id}/edit" do %>
            <div class="badge-red">
              <li class="profile-badges">
                <%= "#{b.name}" %>
              </li></br>
            </div>
          <% end %>
        <% end %>
        <!-- Display Blue Badges -->
        <% @user.badges.where(blue: true).each do |b| %>
          <%= link_to "/users/#{@user.id}/badges/#{b.id}/edit" do %>
            <div class="badge-blue">
              <li class="profile-badges">
                <%= "#{b.name}" %>
              </li></br>
            </div>
          <% end %>
        <% end %>
        <!-- Display Yellow Badges -->
        <% @user.badges.where(yellow: true).each do |b| %>
          <%= link_to "/users/#{@user.id}/badges/#{b.id}/edit" do %>
            <div class="badge-yellow">
              <li class="profile-badges">
                <%= "#{b.name}" %>
              </li></br>
            </div>
          <% end %>
        <% end %>
        <!-- Display Green Badges -->
        <% @user.badges.where(green: true).each do |b| %>
          <%= link_to "/users/#{@user.id}/badges/#{b.id}/edit" do %>
            <div class="badge-green">
              <li class="profile-badges">
                <%= "#{b.name}" %>
              </li></br>
            </div>
          <% end %>
        <% end %>
        <!-- Display Purple Badges -->
        <% @user.badges.where(purple: true).each do |b| %>
          <%= link_to "/users/#{@user.id}/badges/#{b.id}/edit" do %>
            <div class="badge-purple">
              <li class="profile-badges">
                <%= "#{b.name}" %>
              </li></br>
            </div>
          <% end %>
        <% end %>
        <!-- Display Pink Badges -->
        <% @user.badges.where(pink: true).each do |b| %>
          <%= link_to "/users/#{@user.id}/badges/#{b.id}/edit" do %>
            <div class="badge-pink">
              <li class="profile-badges">
                <%= "#{b.name}" %>
              </li></br>
            </div>
          <% end %>
        <% end %>
        <!-- Display Grey Badges -->
        <% @user.badges.where(grey: true).each do |b| %>
          <%= link_to "/users/#{@user.id}/badges/#{b.id}/edit" do %>
            <div class="badge-grey">
              <li class="profile-badges" style="color: black;">
                <%= "#{b.name}" %>
              </li></br>
            </div>
          <% end %>
        <% end %>
      </ul>
    </div>
  <% else %>
    <h1 class="login-message"><%= link_to "LOGIN", :login %> to view profiles</h1>
  <% end %>
</div>
