<div class="background", style="height: 800px;">
  <% if current_user && current_user == @user %>
    <div class="left-side">
      <!-- <h1 class="profile-title"><%= link_to "Edit Settings", "/users/#{@user.id}/edit" %></h1> -->
      </br><h1 class="profile-title">Your Profile</h1>

      <% if @user.avatar.file? == true %>
        <%= image_tag @user.avatar.url(:medium), class:"profile-pic" %>
      <% else %>
        <div class="default-pic">
          <%= image_tag('smile.svg') %>
        </div>
        <!-- <li class="pic-info">Add a profile pic through the settings page (link at top)</li> -->
      <% end %>

      <ul style="padding-left: 0;">
        <% if @user.adm_office == true %>
          <li class="profile-info"><%= link_to "ADM Office", "/users/admo_org_chart", style:"color: #0000CD; font-weight: bold;"%></li>
        <% elsif @user.strategic_human_resources == true %>
          <li class="profile-info"><%= link_to "Human Resources", "/users/hr_org_chart", style:"color: #0000CD; font-weight: bold;"%></li>
        <% elsif @user.service_management_and_facilities == true %>
          <li class="profile-info"><%= link_to "Service Management & Facilities", "/users/smf_org_chart", style:"color: #0000CD; font-weight: bold;"%></li>
        <% elsif @user.business_planning_and_finance == true %>
          <li class="profile-info"><%= link_to "Business Planning and Finance", "/users/bpf_org_chart", style:"color: #0000CD; font-weight: bold;"%></li>
        <% end %>
        <li class="profile-info"><b>Title:</b> <%= @user.title %></li>
        <li class="profile-info"><b>Email:</b> <%= @user.email %></li>
        <li class="profile-info"><b>Phone:</b> <%= @user.phone %></li>
      </ul>
    </div>

    <div class="right-side">
    <!-- <div class="badge-container"> -->
      <h1 class="badge-title">Your badges</h1>
      <h3 class="badge-title"><b>*Click</b> a <b>badge</b> to <b>edit</b> details</h3>

      <p class="profile-link"><%= link_to 'ADD Badge', "/users/#{@user.id}/badges/new", style:"color: #0000CD;" %></p>

      <ul class="badge-list">
        <!-- Display Red Badges -->
        <% @user.badges.where(red: true).each do |b| %>
          <%= link_to "/users/#{@user.id}/badges/#{b.id}/edit" do %>
            <div class="badge-red">
              <li class="profile-badges">
                <%= "#{b.name}" %>
              </li></br>
            </div>
          <% end %>
        <% end %>
        <!-- Display Blue Badges -->
        <% @user.badges.where(blue: true).each do |b| %>
          <%= link_to "/users/#{@user.id}/badges/#{b.id}/edit" do %>
            <div class="badge-blue">
              <li class="profile-badges">
                <%= "#{b.name}" %>
              </li></br>
            </div>
          <% end %>
        <% end %>
        <!-- Display Yellow Badges -->
        <% @user.badges.where(yellow: true).each do |b| %>
          <%= link_to "/users/#{@user.id}/badges/#{b.id}/edit" do %>
            <div class="badge-yellow">
              <li class="profile-badges">
                <%= "#{b.name}" %>
              </li></br>
            </div>
          <% end %>
        <% end %>
        <!-- Display Green Badges -->
        <% @user.badges.where(green: true).each do |b| %>
          <%= link_to "/users/#{@user.id}/badges/#{b.id}/edit" do %>
          <div class="badge-green">
            <li class="profile-badges">
              <%= "#{b.name}" %>
            </li></br>
          </div>
          <% end %>
        <% end %>
        <!-- Display Purple Badges -->
        <% @user.badges.where(purple: true).each do |b| %>
          <%= link_to "/users/#{@user.id}/badges/#{b.id}/edit" do %>
            <div class="badge-purple">
              <li class="profile-badges">
                <%=  "#{b.name}" %>
              </li></br>
            </div>
          <% end %>
        <% end %>
        <!-- Display Pink Badges -->
        <% @user.badges.where(pink: true).each do |b| %>
          <%= link_to "/users/#{@user.id}/badges/#{b.id}/edit" do %>
            <div class="badge-pink">
              <li class="profile-badges">
                <%= "#{b.name}" %>
              </li></br>
            </div>
          <% end %>
        <% end %>
        <!-- Display Grey Badges -->
        <% @user.badges.where(grey: true).each do |b| %>
          <%= link_to "/users/#{@user.id}/badges/#{b.id}/edit" do %>
            <div class="badge-grey">
              <li class="profile-badges", style="color: black;">
                <%= "#{b.name}" %>
              </li></br>
            </div>
          <% end %>
        <% end %>
      </ul>
    </div>

  <% elsif current_user && current_user != @user %>
    <div class="left-side">
      </br><h1 class="profile-title"><%= @user.name %>'s Profile</h1>

      <% if @user.avatar.file? == true %>
        <%= image_tag @user.avatar.url(:medium), class:"profile-pic" %>
