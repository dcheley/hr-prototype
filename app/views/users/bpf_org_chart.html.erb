<% if current_user %>
  <h1 class="org-title">Business Planning & Finance</h1>

  <section class="org-container">
    <% @users.where(business_planning_and_finance: true, director: true).each do |a| %>
    <div id="level-0" class="level expanded">
      <div class="level-wrap">
        <div id="level-0-active" class="col-1-3 active">

          <div class="element">
            <div class="org-box">

              <div class="org-header">
                <h4 class="branch"><%= "#{a.title}" %><span class=""></span></h4>

                <div class="context">
                  <span class="glyphicon glyphicon-menu-down"></span>
                </div>
              </div>

              <div class="org-details">
                <p class="boss-name"><%= "#{a.name} "%></p>
                <p class="link-name"><%= link_to "Profile Link", "/users/#{a.id}", class:"org-profile-link" %></p>
              </div>

              <!-- <%= link_to "/users/#{a.id}", class:"info-btn" do %> -->
                <div class="info-btn"><span class="glyphicon glyphicon-user"></span></div>
              <!-- <% end %> -->

            </div>
          </div>

        </div>
      </div>
    </div>
    </div>
    <% end %>

    <div id="level-1" class="level">
      <div class="level-wrap">

        <div id="level-1-active" class="col-1-3 active">
          <div class="element"></div>
        </div>

        <div id="level-1-list" class="col-1-3 list">

          <h3 style="text-align: center;">Managers</h3>

          <ul>
            <% @users.where(business_planning_and_finance: true, manager: true).each do |b| %>
            <li class="element">
              <div class="org-box">
                <div class="org-header">
                  <h4 class="branch"><%= "#{b.title}" %><span class=""></span></h4>

                  <div class="context">
                    <span class="glyphicon glyphicon-menu-down"></span>
                  </div>
                </div>

                <div class="org-details">
                  <p class="boss-name"><%= "#{b.name}" %></p>
                  <p class="link-name"><%= link_to "Profile Link", "/users/#{b.id}", class:"org-profile-link" %></p>
                </div>

                <!-- <%= link_to "/users/#{b.id}", class:"info-btn" do %> -->
                  <div class="info-btn"><span class="glyphicon glyphicon-user"></span></div>
                <!-- <% end %> -->
              </div>
            </li>
            <% end %>
          </ul>
        </div>

      </div>
    </div>

    <div id="level-2" class="level hidden">
      <div class="level-wrap">

        <div id="level-2-active" class="col-1-3 active">
          <div class="element"></div>
        </div>

        <div id="level-2-list" class="col-1-3 list">

          <h3 style="text-align: center;">Staff</h3>

          <ul>
            <% @users.where(business_planning_and_finance: true, staff: true).each do |c| %>
            <li class="element">
              <div class="org-box">
                <div class="org-header">
                  <h4 class="branch"><%= "#{c.title}" %><span class=""></span></h4>

                  <div class="context">
                    <span class="glyphicon glyphicon-menu-down"></span>
                  </div>
                </div>

                <div class="org-details">
                  <p class="boss-name"><%= "#{c.name}" %></p>
                  <p class="link-name"><%= link_to "Profile Link", "/users/#{c.id}", class:"org-profile-link" %></p>
                </div>

                <!-- <%= link_to "/users/#{c.id}", class:"info-btn" do %> -->
                  <div class="info-btn"><span class="glyphicon glyphicon-user"></span></div>
                <!-- <% end %> -->
              </div>
            </li>
            <% end %>
          </ul>
        </div>

      </div>
    </div>
  </section>
<% else %>
  <h1 class="login-message"><%= link_to "LOGIN", :login %> to view Interactive Org Chart</h1>
<% end %>
