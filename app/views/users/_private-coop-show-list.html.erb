<ul class="nav nav-pills nav-justified">
  <li role="presentation" class="active"><a href="#bucket" data-toggle="pill">Bucket List</a></li>
  <li role="presentation"><a href="#recognitions" data-toggle="pill">Recognition badges</a></li>
</ul>

<div class="tab-content">
  <div role="tabpane1" class="tab-pane active" id="bucket">
    <p class="badge-list-title" id="bucket-link"><%= link_to "View Bucket List", "/users/opps", class:"team-link" %></p>
    <div class="badge-row" style="padding-top: 30px;">
      <!-- Display Green Badges -->
      <% @user.badges.where.not(opportunity_id: nil).each do |b| %>
        <%= link_to "/users/#{@user.id}/badges/#{b.id}" do %>
          <div class="badge-green">
            <li class="profile-badges-name">
              <%= "#{b.name}" %>
            </li></br>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div role="tabpane1" class="tab-pane" id="recognitions">
    <p class="badge-list-title" id="recognition-link"><%= link_to "Recognize colleagues", "/users/org_charts", class:"team-link" %></p>
    <div class="badge-row" style="padding-top: 30px;">
      <!-- Display Green Badges -->
      <% @user.received_badges.each do |b| %>
        <%= link_to "/users/#{@user.id}/recognitions/#{b.id}" do %>
          <div class="badge-green">
            <li class="profile-badges-name">
              <%= "#{b.name}" %>
            </li></br>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
