

<div class="badge-list">
  <ul class="nav nav-pills nav-justified">
    <li role="presentation" class="active"><a href="#bucket" data-toggle="tab">Bucket List</a></li>
    <li role="presentation"><a href="#recognition" data-toggle="tab">Recognition Badges</a></li>
  </ul>

  <div class="tab-content">
    <div class="left-coop">
      <div role="tabpane1" class="tab-pane active" id="bucket">
        <!-- Display Green Badges -->
        <% @user.badges.where.not(opportunity_id: nil).each do |b| %>
          <%= link_to "/users/#{@user.id}/badges/#{b.id}" do %>
            <div class="badge-green">
              <li class="profile-badges-name">
                <%= "#{b.name}" %>
              </li></br>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="right-coop">
      <div role="tabpane1" class="tab-pane " id="recognition">
        <!-- Display Green Badges -->
        <% @user.received_badges.each do |b| %>
          <%= link_to "/users/#{@user.id}/recognitions/#{b.recognition_id}" do %>
            <div class="badge-green">
              <li class="profile-badges-name">
                <%= "#{b.name}" %>
              </li></br>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
