<% if current_user %>
  <h1 class="org-title">Co-op Students</h1>

  <section class="org-container">
    <% @users.where(name: "Nadeem A").each do |a| %>
    <div id="level-0" class="level expanded">
      <div class="level-wrap">
        <div id="level-0-active" class="col-1-3 active">

          <div class="element">
            <div class="org-box">

              <div class="org-header">
                <h4 class="branch">Mentor<span class=""></span></i></h4>

                <!-- <div class="context">
                  <span class="glyphicon glyphicon-menu-down"></span>
                </div> -->
              </div>

              <% if a.avatar.file? != true %>
                <div class="org-details">
                  <p class="boss-name"><%= link_to "#{a.name}", "/users/#{a.id}" %></p>
                </div>
                <div class="info-btn"><span class="glyphicon glyphicon-user"></span></div>
              <% else %>
                <div class="org-details" style="margin-bottom: 0;">
                  <p class="boss-name"><%= link_to "#{a.name}", "/users/#{a.id}" %></p>
                </div>
                <%= image_tag a.avatar.url(:medium), class:"org-profile-pic" %>
              <% end %>

            </div>
          </div>

        </div>
      </div>
    </div>
    </div>
    <% end %>

    <div id="level-1" class="level">
      <div class="level-wrap">

        <div id="level-1-active" class="col-1-3 active">
          <!-- <div class="element"></div> -->
        </div>

        <div id="level-1-list" class="col-1-3 list">

          <h3 style="text-align: center;">Students</h3>

          <ul>
            <% @users.where(co_op: true).each do |b| %>
            <li class="element" style="width: 240px;">
              <div class="org-box">
                <div class="org-header">
                  <h4 class="branch"><%= "#{b.title}" %><span class=""></span></h4>

                  <!-- <div class="context">
                    <span class="glyphicon glyphicon-menu-down"></span>
                  </div> -->
                </div>

                <% if b.avatar.file? != true %>
                  <div class="org-details">
                    <p class="boss-name"><%= link_to "#{b.name}", "/users/#{b.id}" %></p>
                    <p class="boss-name" style="font-size: 12px;"><b>Bucket List Badges:</b> <%= b.badges.count %></p>
                    <p class="boss-name" style="font-size: 12px;"><b>Recognition Badges:</b> <%= b.received_badges.count %></p>
                  </div>
                  <div class="info-btn"><span class="glyphicon glyphicon-user"></span></div>
                <% else %>
                  <div class="org-details" style="margin-bottom: 0;">
                    <p class="boss-name"><%= link_to "#{b.name}", "/users/#{b.id}" %></p>
                    <p class="boss-name" style="font-size: 12px;">Bucket List Badges: <%= b.badges.count %></p>
                    <p class="boss-name" style="font-size: 12px;">Recognition Badges: <%= b.received_badges.count %></p>
                  </div>
                  <%= image_tag b.avatar.url(:medium), class:"org-profile-pic" %>
                <% end %>
              </div>
            </li>
            <% end %>
          </ul>
        </div>

      </div>
    </div>
  </section>
<% else %>
  <h1 class="login-message"><%= link_to "LOGIN", :login %> to view Interactive Org Chart</h1>
<% end %>
