<% if current_user == @user %>
  <div class="badge-list">
    <div class="quarter">
      <p class="badge-list-title"><%= link_to "Add more on your education", "/users/#{current_user.id}/badges/new", class:"team-link" %></p>
    </div>
    <div class="quarter">
      <p class="badge-list-title"><%= link_to "Add another skill or experience", "/badges/exp", class:"team-link" %></p>
    </div>
    <div class="quarter">
      <p class="badge-list-title"><%= link_to "View events", "/users/opps", class:"team-link" %></p>
    </div>
    <div class="quarter">
      <p class="badge-list-title"><%= link_to "Recognize colleagues", "/users/org_charts", class:"team-link" %></p>
    </div>
<% end %>

  <ul class="nav nav-pills nav-justified">
    <li role="presentation" class="active"><a href="#edu" data-toggle="pill">Education</a></li>
    <li role="presentation"><a href="#skillz" data-toggle="pill">Skills & Experience</a></li>
    <li role="presentation"><a href="#eventz" data-toggle="pill">Events</a></li>
    <li role="presentation"><a href="#recognitionz" data-toggle="pill">Recognition Badges</a></li>
  </ul>
  <div class="tab-content">
    <div role="tabpane1" class="tab-pane active" id="edu">
      <div class="badge-row">
        <!-- Display Green Badges -->
        <% @user.badges.where(opportunity_id: nil, education: true).each do |b| %>
          <%= link_to "/users/#{@user.id}/badges/#{b.id}" do %>
            <div class="badge-green">
              <li class="profile-badges-name">
                <%= "#{b.name}" %>
              </li></br>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div role="tabpane1" class="tab-pane" id="skillz">
      <div class="badge-row">
        <!-- Display Green Badges -->
        <% @user.badges.where(opportunity_id: nil, exp: true).each do |b| %>
          <%= link_to "/users/#{@user.id}/badges/#{b.id}" do %>
            <div class="badge-green">
              <li class="profile-badges-name">
                <%= "#{b.name}" %>
              </li></br>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div role="tabpane1" class="tab-pane" id="eventz">
      <div class="badge-row">
        <!-- Display Green Badges -->
        <% @user.badges.where.not(opportunity_id: nil).each do |b| %>
          <%= link_to "/users/#{@user.id}/badges/#{b.id}" do %>
            <div class="badge-green">
              <li class="profile-badges-name">
                <%= "#{b.name}" %>
              </li></br>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div role="tabpane1" class="tab-pane" id="recognitionz">
      <div class="badge-row">
        <!-- Display Green Badges -->
        <% @user.received_badges.each do |b| %>
          <%= link_to "/users/#{@user.id}/recognitions/#{b.id}" do %>
            <div class="badge-green">
              <li class="profile-badges-name">
                <%= "#{b.name}" %>
              </li></br>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
