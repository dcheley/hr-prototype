<div class="badge-list" style="margin-top: 160px;">
  <div class="quarter">
    <p class="badge-list-title">Skills & Experience</p>
    <!-- Display Green Badges -->
    <% @user.badges.where(opportunity_id: nil, exp: true).each do |b| %>
      <%= link_to "/users/#{@user.id}/badges/#{b.id}" do %>
        <div class="badge-green">
          <li class="profile-badges-name">
            <%= "#{b.name}" %>
          </li></br>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="quarter">
    <p class="badge-list-title">Education</p>
    <!-- Display Green Badges -->
    <% @user.badges.where(opportunity_id: nil, education: true).each do |b| %>
      <%= link_to "/users/#{@user.id}/badges/#{b.id}" do %>
        <div class="badge-green">
          <li class="profile-badges-name">
            <%= "#{b.name}" %>
          </li></br>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="quarter">
    <p class="badge-list-title">Events</p>
    <!-- Display Green Badges -->
    <% @user.badges.where.not(opportunity_id: nil).each do |b| %>
      <%= link_to "/users/#{@user.id}/badges/#{b.id}" do %>
        <div class="badge-green">
          <li class="profile-badges-name">
            <%= "#{b.name}" %>
          </li></br>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="quarter">
    <p class="badge-list-title">Recognition Badges</p>
    <!-- Display Green Badges -->
    <% @user.received_badges.each do |b| %>
      <%= link_to "/users/#{@user.id}/recognitions/#{b.id}" do %>
        <div class="badge-green">
          <li class="profile-badges-name">
            <%= "#{b.name}" %>
          </li></br>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
