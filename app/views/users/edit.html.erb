<div class="background">
  <% if current_user == @user %>
  <div class="container" style="margin-top: 10px; text-align: center;">
    <h1 class="form-title">Edit Account Settings</h1>

      <%= form_for(@user) do |f| %>
        <% if @user.errors.any? %>
          <h2 class="error-header"><%= pluralize(@user.errors.count, "error") %> occurred!</h2>

          <ul class="error-list">
            <% @user.errors.full_messages.each do |msg| %>
              <li class="error-msg"><%= msg %></li>
            <% end %>
          </ul>

        <% end %>

        <div class="field">
          <%= f.label :email, class:"field-label" %>
          <%= f.text_field :email, class:"field-input" %>
        </div>

        <!-- <div class="field">
          <%= f.label :name, class:"field-label" %>
          <%= f.text_field :name, class:"field-input" %>
        </div> -->

