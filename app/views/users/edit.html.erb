          <%= f.text_field :direct_report, class:"field-input" %>
        </div>

        <div class="field">
          <%= f.label :career_aspirations, class:"field-label" %>
          <%= f.text_field :career_aspirations, class:"field-input" %>
        </div>

        <div class="field">
          <%= f.label :job_description, class:"field-label" %>
          <%= f.text_area :job_description, class:"field-input", placeholder:"Describe your job experience in 500 characters or less." %>
        </div>

        <div class="field-label" style="padding-top: 15px;">
          <b>Profile Picture</b>
        </div>

        <div class="avatar_container">
          <%= f.file_field :avatar %>
        </div>

        <div class="check-box">
          <%= f.check_box :image_delete %>
          <%= f.label :image_delete, "Delete Image" %>
        </div>

        <div class="divider"></div>

