<div class="row">
  <h4 class="profile-title">Education</h4>

  <!-- Display Education Badges -->
  <% @user.badges.where(opportunity_id: nil, education: true).each do |b| %>
    <div class='row' style='margin-top: 15px; margin-bottom: 20px;'>
      <div class='blank-quarter'>
        <%= image_tag 'education_icon.png', class:'badge-icon' %>
      </div>

      <div class='half'>
        <p class="badge-text"><%= b.name %></p>
        <p class="badge-text"><%= b.description %></p>
      </div>

      <div class='blank-quarter' style='width: 23%; margin-right: 2%;'>
        <div class="float" id="badge-button">
          <!-- Likes -->
        </div>
      </div>
    </div>
  <% end %>
</div>

