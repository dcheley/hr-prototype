<% if current_user %>
  <%= render 'office-sidebar' %>

  <section class="org-container">
    <h1 class="org-title">ADM's Office</h1>

    <p class="legend-title">Unit by colour</p>

    <ul class="legend">
      <li class="legend-item"><span class="team-1"></span>Robert B</li>
      <li class="legend-item"><span class="team-2"></span>Kathy T</li>
      <li class="legend-item"><span class="team-3"></span>Isolina K</li>
    </ul>

    <div id="level-0" class="level expanded">
      <div class="level-wrap">
        <div id="level-0-active" class="col-1-3 active">
          <% @users.where(adm_office: true, adm: true).each do |a| %>
            <%= link_to "/users/#{a.id}" do %>
              <div class="element">
                <div class="org-box">
                  <% if a.avatar.file? != true %>
                    <div class="org-details">
                      <p class="boss-name"><%= a.name.upcase %></p>
                      <p class="boss-name"><%= a.title %></p>
                    </div>
                    <div class="info-btn" id="team-one">
                      <span class="glyphicon glyphicon-user"></span>
                    </div>
                  <% else %>
                    <div class="org-details">
                      <p class="boss-name"><%= a.name.upcase %></p>
                      <p class="boss-name"><%= a.title %></p>
                    </div>
                    <%= image_tag a.avatar.url(:medium), class:"org-profile-pic" %>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div id="level-1" class="level">
      <div class="level-wrap">
        <div id="level-1-list" class="col-1-3 list">
          <ul>
            <% @users.where(adm_office: true, manager: true).each do |b| %>
              <%= link_to "/users/#{b.id}" do %>
                <li class="element">
                  <div class="org-box">
                    <% if b.avatar.file? != true %>
                      <div class="org-details">
                        <p class="boss-name"><%= b.name.upcase %></p>
                        <p class="boss-name"><%= b.title %></p>
                      </div>
                      <% if b.team == 1 %>
                        <div class="info-btn" id="team-one">
                      <% elsif b.team == 2 %>
                        <div class="info-btn" id="team-two">
                      <% elsif b.team == 3 %>
                        <div class="info-btn" id="team-three">
                      <% end %>
                          <span class="glyphicon glyphicon-user"></span>
                        </div>
                    <% else %>
                      <div class="org-details">
                        <p class="boss-name"><%= b.name.upcase %></p>
                        <p class="boss-name"><%= b.title %></p>
                      </div>
                      <%= image_tag b.avatar.url(:medium), class:"org-profile-pic" %>
                    <% end %>
                  </div>
                </li>
              <% end%>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

    <div id="level-2" class="level">
      <div class="level-wrap">
        <div id="level-2-list" class="col-1-3 list">
          <ul>
            <% @users.where(adm_office: true, staff: true).each do |c| %>
              <%= link_to "/users/#{c.id}" do %>
                <li class="element">
                  <div class="org-box">
                    <% if c.avatar.file? != true %>
                      <div class="org-details">
                        <p class="boss-name"><%= c.name.upcase %></p>
                        <p class="boss-name"><%= c.title %></p>
                      </div>
                      <% if c.team == 1 %>
                        <div class="info-btn" id="team-one">
                      <% elsif c.team == 2 %>
                        <div class="info-btn" id="team-two">
                      <% elsif c.team == 3 %>
                        <div class="info-btn" id="team-three">
                      <% end %>
                          <span class="glyphicon glyphicon-user"></span>
                        </div>
                    <% else %>
                      <div class="org-details">
                        <p class="boss-name"><%= c.name.upcase %></p>
                        <p class="boss-name"><%= c.title %></p>
                      </div>
                      <%= image_tag c.avatar.url(:medium), class:"org-profile-pic" %>
                    <% end %>
                  </div>
                </li>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </section>
<% else %>
  <h1 class="login-message"><%= link_to "LOGIN", :login %> to view Interactive Org Chart</h1>
<% end %>
