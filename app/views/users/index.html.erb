<% if params[:search] %>
  <b><%= @users.count %> Profiles found:</b>
  <% @users.each do |u| %>
    <%= link_to "#{u.name}", "/users/#{u.id}" %>
  <% end %>
<% end %>

<% if @users.blank? %>
  <% flash[:alert] = "There are currently no profiles named/containing the #{params[:search]} badge." %>
<% end %>
