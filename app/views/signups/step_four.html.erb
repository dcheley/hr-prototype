<% if current_user %>
  <div class="container" style="margin-top: 10px; text-align: center;">
    <ol class="track-progress" data-steps="6">
      <li class="done"><span>Disclaimer</span></li><!--
      --><li class="done"><span>Personal Info</span></li><!--
      --><li class="done"><span>Career Info</span></li><!--
      --><li class="done"><span>Education Badge</span></li><!--
      --><li><span>Experience Badge</span></li><!--
      --><li><span>Complete Sign Up</span></li>
    </ol>
  </div>
  <div class="container" style="width: 80%; text-align: center; margin-top: 0; margin-bottom: 0;">
    <h2 class="form-option" style="padding-bottom: 30px;">Education Badges</h2>

    <div class="badge-row">
      <%= button_to 'B.A.', {:controller => 'badges', :action => 'create', badge: {:education => true, :user_id => current_user.id, :name => "B.A.", signup_attributes: {:current_step => 5}}}, method: :post, class:"new-badge" %>
      <%= button_to 'B.Sc.', {:controller => 'badges', :action => 'create', badge: {:education => true, :user_id => current_user.id, :name => "B.Sc.", signup_attributes: {:current_step => 5}}}, method: :post, class:"new-badge" %>
      <%= button_to 'B.B.A.', {:controller => 'badges', :action => 'create', badge: {:education => true, :user_id => current_user.id, :name => "B.B.A.", signup_attributes: {:current_step => 5}}}, method: :post, class:"new-badge" %>
      <%= button_to 'M.A.', {:controller => 'badges', :action => 'create', badge: {:education => true, :user_id => current_user.id, :name => "M.A.", signup_attributes: {:current_step => 5}}}, method: :post, class:"new-badge" %>
      <%= button_to 'M.Sc.', {:controller => 'badges', :action => 'create', badge: {:education => true, :user_id => current_user.id, :name => "M.Sc.", signup_attributes: {:current_step => 5}}}, method: :post, class:"new-badge" %>
      <%= button_to 'Ph.D.', {:controller => 'badges', :action => 'create', badge: {:education => true, :user_id => current_user.id, :name => "Ph.D.", signup_attributes: {:current_step => 5}}}, method: :post, class:"new-badge" %>
      <%= button_to 'J.D.', {:controller => 'badges', :action => 'create', badge: {:education => true, :user_id => current_user.id, :name => "J.D.", signup_attributes: {:current_step => 5}}}, method: :post, class:"new-badge" %>
      <%= button_to 'M.B.A.', {:controller => 'badges', :action => 'create', badge: {:education => true, :user_id => current_user.id, :name => "M.B.A", signup_attributes: {:current_step => 5}}}, method: :post, class:"new-badge" %>
      <%= button_to 'M.D.', {:controller => 'badges', :action => 'create', badge: {:education => true, :user_id => current_user.id, :name => "M.D.", signup_attributes: {:current_step => 5}}}, method: :post, class:"new-badge" %>
      <%= button_to 'CPA', {:controller => 'badges', :action => 'create', badge: {:education => true, :user_id => current_user.id, :name => "CPA", signup_attributes: {:current_step => 5}}}, method: :post, class:"new-badge" %>
      <%= button_to 'CFA', {:controller => 'badges', :action => 'create', badge: {:education => true, :user_id => current_user.id, :name => "CFA", signup_attributes: {:current_step => 5}}}, method: :post, class:"new-badge" %>
      <%= button_to 'P.Eng.', {:controller => 'badges', :action => 'create', badge: {:education => true, :user_id => current_user.id, :name => "P.Eng.", signup_attributes: {:current_step => 5}}}, method: :post, class:"new-badge" %>
      <%= button_to 'M.P.A.', {:controller => 'badges', :action => 'create', badge: {:education => true, :user_id => current_user.id, :name => "M.P.A.", signup_attributes: {:current_step => 5}}}, method: :post, class:"new-badge" %>
      <%= button_to 'PMP', {:controller => 'badges', :action => 'create', badge: {:education => true, :user_id => current_user.id, :name => "PMP", signup_attributes: {:current_step => 5}}}, method: :post, class:"new-badge" %>
    </div>

    <h2 class="form-title" style="clear: both; padding-top: 50px;">Can't find your education credentials? Create a custom badge below</h2>

    <%= form_for([current_user, @badge]) do |f| %>
      <% if @badge.errors.any? %>
        <h2 class="error-header"><%= pluralize(@badge.errors.count, "error") %> occurred!</h2>

        <ul class="error-list">
          <% @badge.errors.full_messages.each do |msg| %>
            <li class="error-msg"><%= msg %></li>
          <% end %>
        </ul>
      <% end %>

      <div class="field">
        <%= f.label :name, "Name of Credential", class:"field-label" %>
        <%= f.text_field :name, class:"field-input" %>
      </div>

      <div class="field">
        <%= f.label :description, class:"field-label" %>
        <%= f.text_area :description, class:"field-input", placeholder:"Describe your credentials in 500 characters or less." %>
      </div>

      <%= f.hidden_field :education, value: true %>

      <%= f.fields_for :signup_attributes do |s| %>
        <%= s.hidden_field :current_step, value: 5 %>
      <% end %>

      <div class="center-float-wrap">
        <div class="float">
          <%= f.submit "SUBMIT", class:"submit-green" %>
        </div>
    <% end %>

      <div class="float">
        <%= link_to "CANCEL", :logout, class:"delete", style:"margin-left: 15px;" %>
      </div>

      <div class="float" style="clear: both; width: 100%;">
        <%= form_for(current_user) do |f2| %>
          <%= f2.fields_for :signup do |s| %>
            <%= s.hidden_field :current_step, value: 5 %>
          <% end %>
          <%= f2.submit "SKIP", class:"submit-blue", style:"margin: auto;" %>
        <% end %>
      </div>
    </div>

<% else %>
  <h1 class="login-message"><%= link_to "LOGIN", :login %> to create a badge</h1>
<% end %>
  </div>
