<div class="background">
  <% if current_user %>
  <div class="container" style="margin-top: 10px; text-align: center;">
    <h1>3/6</h1>
    <h1 class="form-title">Edit Account Settings</h1>

      <%= form_for(current_user) do |f| %>
        <% if current_user.errors.any? %>
          <h2 class="error-header"><%= pluralize(current_user.errors.count, "error") %> occurred!</h2>

          <ul class="error-list">
            <% current_user.errors.full_messages.each do |msg| %>
              <li class="error-msg"><%= msg %></li>
            <% end %>
          </ul>

        <% end %>
        <div class="field">
          <%= f.label :career_aspirations, "Career Aspirations", class:"field-label" %>
          <%= f.text_field :career_aspirations, placeholder:"Write a short sentence or a few words about your interests.", class:"field-input" %>
        </div>

        <div class="check-box">
          <%= f.label :job_description, "Job Description", class:"field-label" %>
          <%= f.text_area :job_description, placeholder:"Describe your job experience in 500 characters or less.", class:"field-input" %>
        </div>

        <%= f.fields_for :signup_attributes do |s| %>
          <%= s.hidden_field :step_three, value: true %>
        <% end %>

        <div class="divider"></div>

        <div class="center-float-wrap">
          <div class="float">
            <%= f.submit "SUBMIT", class:"submit-green" %>
          </div>

          <div class="float">
            <%= link_to "/users/#{current_user.id}", class:"cancel-link" do %>
              <div class="submit-blue">CANCEL</div>
            <% end %>
          </div>
        </div>

      <% end %>
    </div>
  <% else %>
    <h1 class="login-message"><%= link_to "LOGIN", :login %> to set up profile</h1>
  <% end %>
</div>
