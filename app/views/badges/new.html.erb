<div class="background" style="height: 1500px;">
  <% if current_user %>
    <h1 class="form-title" style="padding-top: 3%; margin-bottom: 3%;">Pick an existing badge below:</h1>

    <div class="container">
      <%= button_to 'Marketing Badge', {:controller => 'badges', :action => 'create', badge: {:user_id => @user.id, :name => "Marketing", :blue => true, :description => "Exposure to various Marketing initiatives."}}, method: :post, class:"submit" %>
      <%= button_to 'Finance Badge', {:controller => 'badges', :action => 'create', badge: {:user_id => @user.id, :name => "Finance", :red => true, :description => "Highly experienced in Financial matters."}}, method: :post, class:"submit", style:"background-color: #CC0000;" %>
      <%= button_to 'Sales Badge', {:controller => 'badges', :action => 'create', badge: {:user_id => @user.id, :name => "Sales", :green => true, :description => "Proven track record meeting demanding sales targets."}}, method: :post, class:"submit", style:"background-color: #90D150;"  %>
      <%= button_to 'Human Resources', {:controller => 'badges', :action => 'create', badge: {:user_id => @user.id, :name => "Human Resources", :yellow => true, :description => "Widely recognized for understanding of HR strategy."}}, method: :post, class:"submit", style:"background-color: #FFC33C;" %>
      <%= button_to 'Project Management Badge', {:controller => 'badges', :action => 'create', badge: {:user_id => @user.id, :name => "Project Management", :purple => true, :description => "Extremely organized and comfortable working within tight deadlines."}}, method: :post, class:"submit", style:"background-color: #4B0082;" %>
      <%= button_to 'Design Badge', {:controller => 'badges', :action => 'create', badge: {:user_id => @user.id, :name => "Design", :pink => true, :description => "Beautiful and creative designs throughout past projects."}}, method: :post, class:"submit", style:"background-color: #FF69B4;" %>
      <%= button_to 'Accounting Badge', {:controller => 'badges', :action => 'create', badge: {:user_id => @user.id, :name => "Accounting", :grey => true, :description => "Excellent command of bookkeeping best practices."}}, method: :post, class:"submit", style:"background-color: rgb(102,102,102);" %>

      <h3 style="text-align: center; margin-top: 50px; margin-bottom: 0;"><b>OR</b> create a custon badge:</h3>
      <%= render 'badges_form' %>
    </div>
  <% else %>
    <h1 class="login-message"><%= link_to "LOGIN", :login %> to create a badge</h1>
  <% end %>
</div>
