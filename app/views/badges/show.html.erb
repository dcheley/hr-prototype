<div class="background" style="text-align: center;">
  <% if current_user %>
    <ul class="badge-details">

      <h2 class="badge-detail-title"><%= "#{@user.name}" %>'s badge details</h2>
      <!-- Display Green Badges -->
      <div class="badge-show-green">
        <h2 class="badge-show-title"><%= @badge.name %></h2>
      </div>

      <% if @badge.description != nil && @badge.description != "" %>
      <div class="badge-description-wrap">
        <p class="badge-description"><%= @badge.description %></p>
      </div>
      <% else %>
        <% if @badge.opportunity_id == nil %>
          <div class="team-info" style="font-size: 16px; margin: 30px auto;">
            <%= link_to "Describe your skill or experience in 500 characters or less.",
                "/users/#{@user.id}/badges/#{@badge.id}/edit", class:"team-link",
                style:"margin-left: 0;" %>
          </div>
        <% else %>
        <div class="team-info" style="font-size: 16px; margin: 30px auto;">
          <%= link_to "Write about your key takeaways from this event.",
              "/users/#{@user.id}/badges/#{@badge.id}/edit", class:"team-link",
              style:"margin-left: 0;" %>
        </div>
        <% end %>
      <% end %>

      <% if current_user.liked? @badge %>
        <%= link_to image_tag('thumbs-up-empty.svg', class:"thumbs-empty"), unlike_badge_path(@badge.id), method: :put, remote: true, id: "like_#{@badge.id}" %>
        <p class="profile-badges"></p>
        <%= render 'likes' %>
      <% else %>
        <%= link_to image_tag('thumbs-up.svg', class:"thumbs-up"), like_badge_path(@badge.id), method: :put, remote: true, id: "like_#{@badge.id}" %>
        <p class="profile-badges"></p>
        <%= render 'likes' %>
      <% end %>

      <% if current_user.id == @badge.user_id %>
        <div class="center-float-wrap">
          <div class="float" style="margin-left: 5px; margin-right: 5px;">
            <%= link_to 'ADD ANOTHER BADGE', "/users/#{@user.id}/badges/new", class:"submit-green", style:"width: 260px;" %>
          </div>

          <div class="float" style="margin-left: 5px; margin-right: 5px;">
            <%= link_to "/users/#{@user.id}", class:"cancel-center-link" do %>
              <div class="submit-blue">BACK TO PROFILE</div>
            <% end %>
          </div>

          <% if @badge.opportunity_id == nil %>
            <div class="float" style="margin-left: 5px;">
              <%= button_to 'DELETE BADGE', {:controller => 'badges', :action =>
                 'destroy', :user_id => current_user.id, :id => "#{@badge.id}"},
                  method: :delete, data: { confirm: "You sure? Badge will be permanenetly removed!" }, class:"delete" %>
            </div>
          <% end %>

      <% else %>
        <%= link_to "/users/#{@user.id}", class:"cancel-center-link" do %>
          <div class="submit-blue">BACK TO PROFILE</div>
        <% end %>
          </div>
      <% end %>

    </ul>

  <% else %>
    <h1 class="login-message"><%= link_to "LOGIN", :login %> to view <%= User.find(@badge.user_id).name %>'s badge</h1>
  <% end %>
</div>
