<%= form_for([@user, @badge]) do |f| %>
  <% if @badge.errors.any? %>
    <h2 class="error-header"><%= pluralize(@badge.errors.count, "error") %> occurred!</h2>

    <ul class="error-list">
      <% @badge.errors.full_messages.each do |msg| %>
        <li class="error-msg"><%= msg %></li>
      <% end %>
    </ul>

  <% end %>

  <div class="field">
    <%= f.label :name, class:"field-label" %>
    <%= f.text_field :name, class:"field-input", placeholder:"Skill or Experience" %>
  </div>

  <div class="field">
    <%= f.label :description, class:"field-label" %>
    <%= f.text_area :description, class:"field-input", placeholder:"Describe your skill or experience in 500 characters or less." %>
  </div>

  <p class="field-label"><b>Badge Type<b></p></br>

  <!-- <div class="check-box">
    <%= f.check_box :exp %>
    <%= f.label :exp, "Skill OR Experience badge type" %>
  </div>

  <div class="check-box">
    <%= f.check_box :education %>
    <%= f.label :education, "Education badge type" %>
  </div> -->

  <% if current_page?(action: "new") %>
    <%= f.hidden_field :education, value: true %>
  <% elsif current_page?(action: "exp")%>
    <%= f.hidden_field :exp, value: true %>
  <% end %>

  <div class="center-float-wrap">
    <div class="float">
      <%= f.submit "SUBMIT", class:"submit-green" %>
    </div>

  <% end %>
