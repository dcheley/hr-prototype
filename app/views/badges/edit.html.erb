<div class="quarter">
  <div class=white-box>
    <%= image_tag('CSD-logo.jpg', class:"csd-logo") %>
  </div>

  <p class="feed-title">Your Badges</p>

  <ul class="home-feed-list">
    <% @user.badges.each do |b| %>
      <li id="csd-blue">
        <%= link_to "#{b.name}", "/users/#{@user.id}/badges/#{b.id}/edit", class:'home-feed-link' %>
      </li>
    <% end %>
  </ul>
</div>

<div class="three-quarters" style="margin-top: 10px; text-align: center;">
  <% if current_user == @user %>
    <h1 class="form-title" style="padding-top: 3%; margin-bottom: 3%;">Edit Badge</h1>

    <%= render 'badges_form' %>

    <div class="float">
      <%= link_to "CANCEL", user_url(@user), class:"delete", style:"margin-left: 15px;" %>
    </div>

    <div class="float" style="clear: both;">
      <%= link_to "BACK TO PROFILE", "/users/#{@user.id}", class:"submit-blue", style:"margin-top: 0; margin-left: 30px;" %>
    </div>
  <% else %>
    <h1 class="login-message"><%= link_to "LOGIN", :login %> to edit <%= User.find(@badge.user_id).name %>'s badge</h1>
  <% end %>
</div>
