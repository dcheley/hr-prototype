<div class="background">
  <% if current_user == @user %>
    <h1 class="form-title" style="padding-top: 3%; margin-bottom: 3%;">Edit Badge</h1>

    <div class="container" style="margin-top: 15px; text-align: center;">
      <%= render 'badges_form' %>

        <div class="float">
          <%= link_to "/users/#{@user.id}/badges/#{@badge.id}", class:"cancel-link" do %>
            <div class="submit-blue">CANCEL</div>
          <% end %>
        </div>
      </div>
    </div>

  <% else %>
    <h1 class="login-message"><%= link_to "LOGIN", :login %> to edit <%= User.find(@badge.user_id).name %>'s badge</h1>
  <% end %>
</div>
