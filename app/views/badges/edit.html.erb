<div class="background">
  <% if current_user == @user %>
    <h1 class="form-title">Edit Badge</h1>
    <%= render 'badges_form' %>
    <%= button_to 'DELETE', {:controller => 'badges', :action => 'destroy', :user_id => current_user.id, :id => "#{@badge.id}"}, method: :delete, data: { confirm: "You sure? Badge will be permanenetly removed!" }, class:"delete" %>
  </div>
  <% else %>
    <h1 class="login-message"><%= link_to "LOGIN", :login %> to edit badges</h1>
  <% end %>
</div>
