<div class="background">
  <% if current_user == @user %>
    <h1 class="form-title" style="padding-top: 3%; margin-bottom: 3%;">Edit Badge</h1>

    <div class="container" style="margin-top: 15px;">
      <%= render 'badges_form' %>
      <%= button_to 'DELETE BADGE', {:controller => 'badges', :action => 'destroy', :user_id => current_user.id, :id => "#{@badge.id}"}, method: :delete, data: { confirm: "You sure? Badge will be permanenetly removed!" }, class:"delete" %>
    </div>
    
  <% else %>
    <h1 class="login-message"><%= link_to "LOGIN", :login %> to edit <%= @user.name %>'s badge</h1>
  <% end %>
</div>
